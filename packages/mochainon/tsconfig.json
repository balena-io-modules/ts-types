{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noEmit": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "pretty": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "lib": ["es5", "es6"]
  },
  "include": [
    "*.d.ts",
    "*.ts"
  ]
}
